html
    include ../fragments/header
    body
        include ../fragments/navbar

    div#wrapper
        div.container-fluid
            div.row
                div.col-md-8.col-md-offset-2
                    div.panel.panel-default
                        div.panel-heading
                            h1.page-header.text-center Login Form
                        div.panel-body
                            if(message.length > 0)
                                div.alert.alert-warning #{message}
                            form.form-horizontal#registerForm(method='POST', action='/auth/login')
                                div.form-group
                                    label.control-label.col-md-3 Email
                                    div.col-md-7
                                        input.form-control(type='email', name='email', placeholder='Email...', required)
                                div.form-group
                                    label.control-label.col-md-3 Password
                                    div.col-md-7
                                        input.form-control(type='password', name='password', placeholder='Enter password...', required, minlength='6')
                                div.form-group
                                    div.col-md-3.col-md-offset-3
                                        input.btn.btn-raised.btn-info.btn-lg(type='submit', value='Login')

                                div.col-md-9.col-md-offset-3
                                    p(class='text-info')
                                        i Don't have an account?
                                        a(href='/auth/register' class='btn btn-success btn-lg') Register


    include ../fragments/scripting
    include ../fragments/footer



